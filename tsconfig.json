{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        // "rootDir": "./src",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}

